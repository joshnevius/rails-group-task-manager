<%= form_for(@list) do |list_form| %>
  <h4>List Name: <%= list_form.text_field :name %></h4>

  <h4>
    <%= list_form.fields_for :tasks, @list.tasks do |task_field| %>
      <h4>
        Task Name: <%= task_field.text_field :name, placeholder: "Create A Task" %>
      </h4>
    <% end %>
    <%= list_form.submit %>
  <% end %>